server {
        listen 443 ssl http2; # managed by Certbot
	server_name roomsim.spinorama.org; # managed by Certbot
	access_log /var/log/nginx/spinorama-roomsim.access.log;
	error_log /var/log/nginx/spinorama-roomsim.error.log warn;
	ssl_certificate /etc/letsencrypt/live/roomsim.spinorama.org/fullchain.pem; # managed by Certbot
        ssl_certificate_key /etc/letsencrypt/live/roomsim.spinorama.org/privkey.pem; # managed by Certbot
        include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
        ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
        include /etc/nginx/conf.d/headers-strict.conf;

	root /var/www/html/spinorama-roomsim;
	autoindex on;
	index index.html;
	expires modified +1d;
	add_header Cache-Control "public, no-transform";

        location /nginx_status {
	    stub_status;
	}

        location / {
        	 add_header Cross-Origin-Opener-Policy "same-origin";
		 add_header Cross-Origin-Embedder-Policy "require-corp";
	}
}
